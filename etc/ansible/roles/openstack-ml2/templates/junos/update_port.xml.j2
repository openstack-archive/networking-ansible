<config>
    <configuration>
        <interfaces>
            <interface>
                <name>{{ ml2_port_name }}</name>
                <unit>
                    <name>0</name>
                    <description>{{ ml_port_description }}</description>
                    <family>
                        <ethernet-switching>
                            <interface-mode>access</interface-mode>
                            <vlan>
                                <members>{{ ml_segmentation_id }}</members>
                            </vlan>
                        </ethernet-switching>
                    </family>
                </unit>
            </interface>
        </interfaces> 
    </configuration>
</config>
